<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:labelled_marquee="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        labelled_marquee:layout_editor_absoluteX="54dp"
        labelled_marquee:layout_editor_absoluteY="77dp"
        labelled_marquee:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:theme="@style/CircularProgress"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            labelled_marquee:ignore="MissingConstraints"
            labelled_marquee:layout_editor_absoluteX="0dp"
            labelled_marquee:layout_editor_absoluteY="0dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/school_box_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                android:clickable="false"
                android:layerType="none"
                app:labelText="Школа">


                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/school_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:editable="false"
                    android:inputType="none"
                    android:text="Выберите школу" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/login_box_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                android:clickable="false"
                android:layerType="none"
                app:hasClearButton="true"
                app:labelText="Логин">


                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/login_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/password_box_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                app:endIcon="@drawable/ic_remove_red_eye_black_24dp"
                app:labelText="Пароль">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/password_sing_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <Button
                android:id="@+id/enter_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80sp"
                android:layout_marginStart="80sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/round_button"
                android:text="ВОЙТИ"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp" />


        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>