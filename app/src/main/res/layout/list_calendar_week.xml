<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/week_number"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="NW"
        android:gravity="center"
        android:textColor="@color/calendarWeekNum"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/week_days"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:layout_weight="7">

        <TextView
            android:id="@+id/day1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D1"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/day2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D2"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/day3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D3"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/day4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D4"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/day5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D5"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/day6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D6"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/day7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="D7"
            android:gravity="center"
            android:textColor="@color/colorDiaryLesson"
            android:textSize="15sp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>