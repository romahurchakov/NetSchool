<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dn_clear"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Очистить" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dn_1"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 час" />

            <ImageButton
                android:id="@+id/set_nd_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/button"
                app:srcCompat="@drawable/ic_check_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dn_2"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6 часов" />

            <ImageButton
                android:id="@+id/set_nd_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/button"
                app:srcCompat="@drawable/ic_check_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dn_3"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 часа" />

            <ImageButton
                android:id="@+id/set_nd_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/button"
                app:srcCompat="@drawable/ic_check_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dn_4"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="До времени" />

            <TextView
                android:id="@+id/dn_current_time"
                android:layout_width="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginRight="20sp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="20:31" />

            <ImageButton
                android:id="@+id/set_nd_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/button"
                app:srcCompat="@drawable/ic_check_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>